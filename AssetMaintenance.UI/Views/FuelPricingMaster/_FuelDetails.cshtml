@model List<AssetMaintenance.BAL.DTO.FuelMasterDto>

<form enctype="multipart/form-data" id="frmFuel" method="post" role="form">

    <div class="row">
        <div class="col-lg-12">
            <div class="form-group col-lg-3">
                <label class="control-label">Fuel Price<span class="req">*</span></label>
                <input type="text" class="form-control numeric" id="txtFuelPrice" onkeypress="DecimalNumberOnly(this)" name="txtFuelPrice" required/>
            </div>

            <div class="form-group col-lg-3">
                <label class="control-label">Fuel Discount<span class="req">*</span></label>
                <input type="text" class="form-control numeric" id="txtFuelDiscount" onkeypress="DecimalNumberOnly(this)"name="txtFuelDiscount" required />
            </div>

            <div class="form-group col-lg-3">
                <label class="control-label">Date<span class="req">*</span></label>
                <input type="text" class="form-control valid" id="txtFuelDate" readonly="readonly" name="txtFuelDate" required/>
            </div>
            <div class="form-group col-lg-1">
                <label class="control-label">&nbsp;</label>
                <button class="form-control btn btn-success" name="Add" onclick="AddFuelDetail('Fuel')" type="button">Add</button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-striped table-bordered table-hover no-footer dataTable">
                <thead>
                    <tr>
                        <th>
                            Fuel Price
                        </th>
                        <th>
                            Fuel Discount
                        </th>
                        <th>
                            Date
                        </th>
                        <th>
                            Supplier
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.Price</td>
                        <td>@item.Discount</td>
                        <td>@item.PriceDate.ToString("dd/MM/yyyy")</td>
                        <td>@item.SupplierName</td>

                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</form>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#txtFueltDate").datepicker();
            $("#txtDieselDate").datepicker();

          
        });
    </script>
}
