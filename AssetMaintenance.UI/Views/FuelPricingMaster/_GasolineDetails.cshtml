
<div class="row">
    <div class="col-md-12">
        <div class="hpanel">
            <div class="panel-heading">
                @*<div class="panel-tools">
                        <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>*@
                Gasoline
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group col-lg-3">
                            <label class="control-label">Gasoline Price</label>
                            <input type="text" class="form-control numeric" id="txtGasolinePrice" />
                        </div>


                        <div class="form-group col-lg-3">
                            <label class="control-label">Gasoline Discount</label>
                            <input type="text" class="form-control numeric" id="txtGasolineDiscount" />
                        </div>

                        <div class="form-group col-lg-3">
                            <label class="control-label">Date</label>
                            <input type="text" class="form-control valid" id="txtGasolineDate" readonly="readonly" />
                        </div>
                        
                        <div class="form-group col-lg-1">
                            <label class="control-label">&nbsp;</label>
                            <button class="form-control btn btn-success" name="Add" onclick="AddFuelDetail('Gasoline')">Add</button>
                        
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <table class="table table-striped table-bordered table-hover no-footer dataTable">
                            <thead>
                                <tr>
                                    <th>
                                        Gasoline Price
                                    </th>
                                    <th>
                                        Gasoline Discount
                                    </th>
                                    <th>
                                        Date
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Price</td>
                                        <td>@item.Discount</td>
                                        <td>@item.PriceDate.ToString("MM/dd/yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#txtGasolineDate").datepicker();
    });
</script>