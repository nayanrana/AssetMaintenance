<form enctype="multipart/form-data" id="frmGasoline" method="post" role="form">

    <div class="row">
        <div class="col-lg-12">
            <div class="form-group col-lg-3">
                <label class="control-label">Gasoline Price<span class="req">*</span></label>
                <input type="text" class="form-control numeric" id="txtGasolinePrice" name="txtGasolinePrice"  onkeypress="DecimalNumberOnly(this)" required />
            </div>


            <div class="form-group col-lg-3">
                <label class="control-label">Gasoline Discount<span class="req">*</span></label>
                <input type="text" class="form-control numeric" id="txtGasolineDiscount"  name="txtGasolineDiscount"  onkeypress="DecimalNumberOnly(this)" required />
            </div>

            <div class="form-group col-lg-3">
                <label class="control-label">Date<span class="req">*</span></label>
                <input type="text" class="form-control valid" id="txtGasolineDate" name="txtGasolineDate" readonly="readonly" required />
            </div>

            <div class="form-group col-lg-1">
                <label class="control-label">&nbsp;</label>
                <button class="form-control btn btn-success" name="Add" onclick="AddFuelDetail('Gasoline')" type="button">Add</button>

            </div>
        </div>
    </div>
</form>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered table-hover no-footer dataTable">
            <thead>
                <tr>
                    <th>
                        Gasoline Price
                    </th>
                    <th>
                        Gasoline Discount
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Supplier
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Price</td>
                    <td>@item.Discount</td>
                    <td>@item.PriceDate.ToString("dd/MM/yyyy")</td>
                    <td>@item.SupplierName</td>

                </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<script>
    $(document).ready(function () {
        $("#txtGasolineDate").datepicker();
    });
</script>
