@model List<AssetMaintenance.BAL.DTO.FuelMasterDto>

<form enctype="multipart/form-data" id="frmDiesel" method="post" role="form">


    <div class="row">
        <div class="col-lg-12">
            <div class="form-group col-lg-3">
                <label class="control-label">Diesel Price<span class="req">*</span></label>
                <input type="text" class="form-control numeric" name="txtDieselPrice" id="txtDieselPrice" onkeypress="DecimalNumberOnly(this)" required />
            </div>


            <div class="form-group col-lg-3">
                <label class="control-label">Diesel Discount<span class="req">*</span></label>
                <input type="text" class="form-control numeric" id="txtDieselDiscount" name="txtDieselDiscount" onkeypress="DecimalNumberOnly(this)" required />


            </div>
            <div class="form-group col-lg-3">
                <label class="control-label">Date<span class="req">*</span></label>
                <input type="text" class="form-control valid" id="txtDieselDate" name="txtDieselDate" readonly="readonly" required />
            </div>
            <div class="form-group col-lg-1">
                <label class="control-label">&nbsp;</label>
                <button class="form-control btn btn-success" name="Add" onclick="AddFuelDetail('Diesel')">Add</button>
            </div>
        </div>
    </div>
</form>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-striped table-bordered table-hover no-footer dataTable">
                <thead>
                    <tr>
                        <th>
                            Diesel Price
                        </th>
                        <th>
                            Diesel Discount
                        </th>
                        <th>
                            Date
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Price</td>
                            <td>@item.Discount</td>
                            <td>@item.PriceDate.ToString("MM/dd/yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


<script>
    $(document).ready(function () {
        $("#txtDieselDate").datepicker();

    });
</script>
