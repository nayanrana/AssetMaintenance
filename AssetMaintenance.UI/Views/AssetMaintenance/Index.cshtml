<script src="~/Scripts/select2.min.js"></script>
<link href="~/Content/css/select2.min.css" rel="stylesheet" />
<div class="normalheader ">
    <div class="hpanel">
        <div class="panel-body">
            <a class="small-header-action" href="">
                <div class="clip-header">
                    <i class="fa fa-arrow-up"></i>
                </div>
            </a>

            <div id="hbreadcrumb" class="pull-right m-t-lg">
                <ol class="hbreadcrumb breadcrumb">
                    <li><a href="@Url.Action(" Index", "ControlPanel" )">Asset Details</a></li>
                    <li class="active">
                        <span>>Asset Details</span>
                    </li>
                </ol>
            </div>
            <h2 class="font-light m-b-xs">
                Asset Details
            </h2>
        </div>
    </div>
</div>

<div class="content animate-panel" style="padding-top:30px;" id="InputFormDiv">
    <div class="hpanel">
        <div class="panel-body">

            <div class="row">
                <div class="form-group col-lg-4">
                    <label>Asset</label>
                    @Html.DropDownList("MaintStatusId", new SelectList(ViewBag.Asset, "Key", "Value"), new { @class = "form-control", id = "AssetId", required = "required" })
                </div>
                <div class="form-group col-lg-4">
                    <label>Maintenance Type</label>
                    @Html.DropDownList("MaintStatusId", new SelectList(ViewBag.MaintenanceType, "Key", "Value"), new { @class = "form-control", id = "MaintenanceId" })

                </div>
                <div>
                    <button class="btn btn-success" onclick="saveData()">Add Maintenance To Asset</button>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-lg-12 text-center ">
                    <label> Servicing</label>
                </div>
                <div class="col-lg-3"></div>
                <div class="col-lg-3">
                    <label> Reminder 1</label>
                </div>
                <div class="col-lg-6">
                    <label>  Reminder 2</label>
                </div>

                <div class="col-lg-3 text-right">
                    <label>  KMS</label>
                </div>
                <div class="col-lg-3">
                    <input type="text" class="form-control" />
                </div>
                <div class="col-lg-3">
                    <input type="text" class="form-control" />
                </div>
                <div class="col-lg-3"><br /><br /></div>

                <div class="col-lg-3 text-right">
                    <label> Time</label>
                </div>
                <div class="col-lg-3">
                    <input type="text" class="form-control" />
                </div>
                <div class="col-lg-3">
                    <input type="text" class="form-control" />
                </div>
                <div class="col-lg-3"><br /><br /></div>

                <div class="col-lg-3 text-right">
                    <label> Energy</label>
                </div>
                <div class="col-lg-3">
                    <input type="text" class="form-control" />
                </div>
                <div class="col-lg-3 ">
                    <input type="text" class="form-control" />
                </div>
                <div class="col-lg-3">

                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        function saveData() {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("SaveAssestMaintenceType", "AssetMaintenance")',
                data: { assetId: $("#AssetId").val(), maintenaceId: $("#MaintenanceId").val() },
                dataType: 'HTML',
                contentType: 'application/x-www-form-urlencoded',
                success: function (data) {
                    toastr.success(data);
                }
            });
        }
        $(document).ready(function () {
            $('#AssetId').select2();
            $('#MaintenanceId').select2();

        });
    </script>
}