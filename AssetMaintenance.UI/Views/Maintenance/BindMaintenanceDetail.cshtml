@model AssetMaintenance.BAL.DTO.AssetMaintenanceDetailDto
@using AssetMaintenance.Helper
@{
//Layout = null;
}

<div class="hpanel">
    <div class="panel-heading">
        <div class="panel-tools">
            <a class="showhide"><i class="fa fa-chevron-up"></i></a>
            <a class="closebox"><i class="fa fa-times"></i></a>
        </div>
        Edit Asset Maintenance Record
    </div>
    <div class="panel-body">
        <form method="get" class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-3 control-label">Registration No.</label>

                <div class="col-sm-9">  @Model.AssetNo </div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Category</label>

                <div class="col-sm-9">
                    @Model.Category
                </div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Type</label>

                <div class="col-sm-9">
                    @Model.Maintenance
                </div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Description</label>

                <div class="col-sm-9"><textarea placeholder="Description" class="form-control"> </textarea></div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-lg-3 control-label">Status</label>

                <div class="col-lg-9">

                </div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-lg-3 control-label">Avail. Status</label>

                <div class="col-lg-9"></div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <div class="col-sm-8 col-sm-offset-2">
                    <button class="btn btn-default" type="submit">Cancel</button>
                    <button class="btn btn-primary" type="submit">Save changes</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    function maintenanceHistory(a,id) {
            var assetName = $(a).attr("data-asset");

            $("#modalTitle").text("Maintenance History for " + assetName);
            $("#MaintenanceHistoryModal").modal('show');

            $.ajax({
                type: "GET",
                url: '@Url.Action("BindMaintenanceDetail", "Maintenance")',
                datatype: "json",
                data: { id: id },
                success: function (data) {
                    $('#SearchedUserProfile').html(data);
                }
            });

        }
</script>